<div class="col-md-6 col-xs-10 col-sm-8 col-lg-5 center-block no-float">
  <div class="card big-padding">
    <h2 class="text-center">Registrarse</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field form-group">
        <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"Correo electronico" %>
      </div>

      <div class="field form-group">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres minimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder:"ContraseÃ±a", class:"form-control" %>
      </div>

      <div class="field form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Confirmar contraseÃ±a", class:"form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Registrarse", class:"btn btn-info" %>
      </div>
    <% end %>
  </div>
</div>
