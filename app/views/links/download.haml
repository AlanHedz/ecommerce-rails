.col-md-10.center-block.no-float
  %article.card.large-padding.text-center
    %h1 Links de descarga
    %p= " Este link expirara en #{distance_of_time_in_words(DateTime.now, @link.expiration_date)}"
    %p= "Podras acceder a el #{5 - @link.downloads }"
    %div
      -@link_attachments.each do |link_attachment|
        %p.medium= link_to link_attachment.attachment.archivo_file_name, download_attachment_path(id: @link.custom_id, attachment_id:link_attachment.id)